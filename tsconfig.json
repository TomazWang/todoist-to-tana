{
    "compilerOptions": {
      "target": "ESNext",
      "module": "node16",
      "moduleResolution": "node16",
      "lib": ["ES6", "ES2015", "ESNext"],
      "outDir": "lib",
      "rootDir": "src",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "importHelpers": true,
      "removeComments": true
    },
    "exclude": [
      "node_modules",
      "lib",
      "test",
      "templates"
    ]
  }